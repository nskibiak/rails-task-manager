<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <div class="task-line">
    <input type="checkbox" <%= "checked" if task.completed == true %> >
    <label><%= link_to task.title, task_path(task) %></label> âˆ™
    <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </div>
<% end %>

<hr>

